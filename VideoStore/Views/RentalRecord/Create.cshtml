@model VideoStore.Models.CheckOutViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>CheckOutViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
<form asp-controller="RentalRecord" asp-action="CreateRecord">

    <label for="movie">Movie Name:</label><select name="movie">
    @foreach(var item in Model.Movies)
    {
        <option value=@item.MovieID>@item.MovieName</option>
    }
    </select>
    <label for="customer">Customer Name:</label><select name="customer">
    @foreach(var item in Model.Customers)
    {
        <option value=@item.CustomerID>@item.CustomerName</option>
    }
    </select>
    <div class="form-group">
                    <label asp-for="RentalDate" class="control-label"></label>
                    <input asp-for="RentalDate" class="form-control" />
                    <span asp-validation-for="RentalDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input asp-for="DueDate" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>